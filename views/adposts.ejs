<!--侧边栏开始-->
<div class="wrap">
  <div class="admin-sidebar sidebar">
    <div class="admin-offcanvar-bar">
      <ul class="am-list">
        <li>
          <a href="/admin">首页</a>
        </li>
        <li class="js-list">
          <a href="javascript:void(0)">文章管理</a>
          <ul class="admin-sidebar-sub" style="display:none;">
            <li>
              <a href="/posts">新建文章</a>
            </li>
            <li>
              <a href="/adposts">管理中心</a>
            </li>
          </ul>
        </li>
        <li class="js-list">
          <a href="javascript:void (0)">项目展示</a>
          <ul class="admin-sidebar-sub" style="display: none;">
            <li>
              <a href="/newproject">新增项目</a>
            </li>
            <li>
              <a href="#">管理中心</a>
            </li>
          </ul>
        </li>
        <li class="js-list">
          <a href="javascript:void(0)">咨询管理</a>
          <ul class="admin-sidebar-sub" style="display: none">
            <li>
              <a href="/leave/off">未操作</a>
            </li>
            <li>
              <a href="/leave/ok">已操作</a>
            </li>
          </ul>
        </li>
        <li class="js-list">
          <a href="javascript:void(0)">团队相册</a>
          <ul class="admin-sidebar-sub" style="display: none;">
            <li>
              <a href="#">管理</a>
            </li>
          </ul>
        </li>
        <li class="js-list">
          <a href="#">其他</a>
          <ul class="admin-sidebar-sub" style="display: none">
            <li>
              <a href="#">还没有开发</a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
  <!--侧边栏结束-->
  <!--后台主体-->
  <div class="admin-content">
    <div class="ad-content-body">
      <div class="body-header">
        <div class="bh-nav">
          <strong>文章</strong>/ <small>管理中心</small>
        </div>
      </div>
      <div class="article">
        <h2>所有文章</h2>
        <table class="table table-striped table-hover">
          <tr>
            <th>标题</th>
            <th>时间</th>
            <th>类别</th>
            <th>阅读量</th>
            <th>更改</th>
            <th>删除</th>
          </tr>
      <% for (var i = 0;i < doc.length;i++){ %>
          <tr>
            <td><%= doc[i].title %></td>
            <td><%= doc[i].time %></td>
            <td><%=doc[i].type %></td>
            <td><%= doc[i].pv%></td>
            <td>修改</td>
            <td class="js-delete" _id="<%= doc[i]._id%>">删除</td>
          </tr>
        <% } %>
        </table>
      </div>
    </div>
  </div>
</div>
<script src="/js/jquery-2.2.1.js"></script>
<script src="/js/adposts.js"></script>
<% include footer %>
